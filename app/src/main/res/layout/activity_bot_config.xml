<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wang.bogong.anuchat.BotConfigActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of bots created (from 0000000)"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/activity_bot_config_createBotEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Create Bots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_bot_config_createBotButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bot_config_createBotEditText"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of posts"
        android:id="@+id/activity_bot_config_postBotEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_bot_config_createBotButton"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Start post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_bot_config_postBotButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bot_config_postBotEditText"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="number of posts"
        android:id="@+id/activity_bot_config_likeBotEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="number"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_bot_config_postBotButton"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Start like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_bot_config_likeBotButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_bot_config_likeBotEditText"
        android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>