<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidProject" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sandstone_yellow</item>
        <item name="colorPrimaryVariant">@color/anu_website_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorAccent">@color/sandstone_yellow</item>
        <item name="android:colorControlActivated">@color/sandstone_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/anu_logo_yellow</item>
        <item name="colorSecondaryVariant">@color/anu_yellow_100</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:immersive">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/custom_cursor_yellow</item>
    </style>
</resources>